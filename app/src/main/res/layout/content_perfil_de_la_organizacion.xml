<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="unah.proyecto.aeo.aplicacionagendaelectronicaoriental.clasesJAVASheyli.PerfilDeLaOrganizacion"
    tools:showIn="@layout/app_bar_perfil_de_la_organizacion"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Cargando..."
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imagenOrganizacion"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/telefono"
                android:text="@string/telefono"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telefono"
                android:text="Cargando..."
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/t"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary">

            </View>

            <TextView
                android:id="@+id/celular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t"
                android:drawableLeft="@drawable/celular"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="8dp"
                android:text="@string/celular"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tcelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/celular"
                android:text="Cargando..."
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tcelular"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary">

            </View>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email"
                android:layout_below="@+id/tcelular"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="8dp"
                android:text="@string/email"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:text="Cargando..."
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/e"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary">

            </View>

            <TextView
                android:id="@+id/direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/direccion"
                android:layout_below="@+id/e"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="8dp"
                android:text="@string/direccion"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/direccion"
                android:text="Cargando..."
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/d"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary">

            </View>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/descripcion"
                android:layout_below="@+id/d"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="8dp"
                android:text="@string/Descripcion"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:text="Cargando..."
                android:textColor="#000"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>