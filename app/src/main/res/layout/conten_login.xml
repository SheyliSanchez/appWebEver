<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unah.proyecto.aeo.aplicacionagendaelectronicaoriental.clasesJAVAVirgilio.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="110dp"
            android:id="@+id/layoutInput"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_white"
            android:padding="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagelogin"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:padding="0.5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/loginusuario"

            />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
            >
                <EditText
                    android:id="@+id/usuario_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:hint="Usuario"
                    android:layout_marginTop="20dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_ñÑ"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleTint="@color/colorAccent"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp"
            >

                <EditText
                    android:id="@+id/contrasena_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:layout_marginTop="20sp"
                    android:hint="Contraseña"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                />
            </android.support.design.widget.TextInputLayout>
<!--
            <TextView
                android:id="@+id/recuperacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/olvidaste"
                android:textColor="#7f0000"
                android:layout_marginTop="10dp"
                android:onClick="recuperar1"



            /> -->

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/ingresar_login"
                android:background="@drawable/rec_gradient"
                android:layout_marginTop="25dp"
                android:textAllCaps="false"
                android:text="Ingresar"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                app:spinning_bar_width="4dp"
                app:spinning_bar_padding="4dp"
                app:spinning_bar_color="#FFFFFF"

            />

            <Button
                android:id="@+id/registrarse_login"
                android:layout_marginTop="25dp"
                android:textColor="#FFF"
                android:background="@drawable/rec_gradient_fb"
                android:textAllCaps="false"
                android:text="Registrarse"
                android:onClick="Formulario_Registrarse_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </ScrollView>






</android.support.constraint.ConstraintLayout>